{
    "manifest_version": 2,
	"name": "show まつり",
	"version": "1.1.3",
	"description": "display hime and her friends in every page",
	"browser_action": {
		"default_icon": "hime1.png",
		"default_title": "まつり!"
	},
	"background" : {
    	"scripts" : ["js/bg.js"]
 	},
    "permissions": [
        "contextMenus", "storage", "tabs", "http://*/*", "https://*/*", "file:///*/*"
    ],
    "icons": {
          "16": "hime1.png",
          "48": "hime1.png",
          "128": "hime1.png"
        },
	"content_scripts": 
    [
        {
            "matches": ["<all_urls>"],
            "exclude_matches": ["*://twitter.com/*"],
            "js": ["js/jquery.min.js", "js/show.js"],
            "run_at": "document_start"
        }
    ],
    "options_page": "option/index.html"
}