{
    "manifest_version": 2,
    "name": "__MSG_appName__",
    "description": "__MSG_appDesc__",
    "default_locale": "zh_CN",
    "version": "1.2.1",
    "browser_action": {
        "default_icon": "hime2.png",
        "default_title": "まつり!"
    },
    "background" : {
        "scripts" : ["js/bg.js"]
    },
    "permissions": [
        "contextMenus", "storage", "tabs", "http://*/*", "https://*/*", "file:///*/*"
    ],
    "icons": {
          "16": "hime2.png",
          "48": "hime2.png",
          "128": "hime2.png"
        },
    "content_scripts": 
    [
        {
            "matches": ["<all_urls>"],
            "exclude_matches": ["*://twitter.com/*"],
            "js": ["js/jquery.min.js", "js/show.js"],
            "run_at": "document_start"
        }
    ],
    "options_page": "option/index.html"
}