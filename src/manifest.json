{
    "manifest_version": 2,
	"name": "show まつり",
	"version": "1.0",
	"description": "display hime in every page",
	"browser_action": {
		"default_icon": "hime1.png",
		"default_title": "まつり!"
	},
	"background" : {
    	"scripts" : ["js/bg.js"]
 	},
    "permissions": [
        "tabs", "http://*/*", "https://*/*"
    ],
	"content_scripts": 
    [
        {
            "matches": ["<all_urls>"],
            // 多个JS按顺序注入
            "js": ["js/jquery.min.js", "js/show.js"],
            // "js": ["show.js"],
            // 代码注入的时间，可选值： "document_start", "document_end", or "document_idle"，最后一个表示页面空闲时，默认document_idle
            "run_at": "document_start"
        }
    ]
}